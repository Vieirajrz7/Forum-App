<a href="/question"><button class="btn btn-primary px-5">Perguntar</button></a>

{{#each row}}

<div class="card mt-4 mb-3">
    <div class="card-body">
        <h2 class="float-start" style="display: inline;">{{title}}</h1>
            <small class="float-end">Date: {{created_at}}</small>
            <a href="/question/{{id}}"><button class="form-control btn btn-primary mt-3">Ver Respostas</button></a>
    </div>
</div>
{{else}}
<h2 style="color: #ccc;" class="mt-4">Nenhuma Pergunta Ainda...</h2>
{{/each}}

